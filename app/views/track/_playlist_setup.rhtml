<script type="text/javascript">

	if(!navigator.userAgent.match(/iPhone|iPod/i)) {			
		var flashvars = {
			type: "xml",
			shuffle: "false",
			repeat: "list",
			file: "/track/list_xml?show=<%=show%>%26identifier=<%=identifier.to_s%>"
		}
		var params = {
			allowscriptaccess: "always"
		}
		var attributes = {
		  id: "openplayer",
		  name: "openplayer",
		  styleclass: "flash_player"
		}
		swfobject.embedSWF('/mediaplayer.swf', "openplayer", "0", "0", "8.0.0", false, flashvars, params, attributes);
	}
</script>