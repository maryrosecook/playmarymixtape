<html> 
	<head>
		<!-- title -->
		<% @title = "Your life in songs" if !Util.ne(@title) %>
		<title>Playmary - <%= @title %></title>
		
		<%= javascript_include_tag 'application', 'swfobject', 'prototype', 'effects', 'controls', 'deliciousmp3', 'si.files', 'dragdrop' %>
		<%= stylesheet_link_tag "main", :media => "all" %>
		<meta name = "viewport" content = "width=device-width">
	</head> 
	
	<body>
		<%= render(:partial => 'shared/header') %><br/>
		
		<%= @content_for_layout %>
				
		<%= render(:partial => 'shared/footer') %>
		<%= render(:partial => 'shared/file_upload_styler')%>
		<%= render(:partial => 'shared/analytics')%>
	</body>
</html>